<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Presentation"
    xmlns:Views="clr-namespace:Presentation.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AR Application">
    <TabBar>
        <Tab x:Name="HomeTab" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate Views:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab x:Name="CharacterTab" Icon="categories.png">
            <ShellContent ContentTemplate="{DataTemplate Views:CharacterPage}" Route="CharacterPage"/>
        </Tab>
    </TabBar>
</Shell>
